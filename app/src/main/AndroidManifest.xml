<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="barbara.srta_athenea_tablas">

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <!--This meta-data tag is required to use Google Play Services. -->
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>

        <activity android:name=".Portada">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                android:theme="@style/AppTheme.NoActionBar">
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:screenOrientation="portrait"
        </activity>
        <activity
            android:name=".Menu"
            android:label="@string/title_activity_portada"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu2"
            android:label="@string/title_activity_menu2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Practica"
            android:label="@string/title_activity_practica"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pregunta"
            android:label="@string/title_activity_pregunta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PreguntaVoz"
            android:label="@string/title_activity_pregunta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Resultados"
            android:label="@string/title_activity_resultados"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Instrucciones"
            android:label="@string/title_activity_instrucciones"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".Instrucciones2"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".Ajustes"
            android:label="@string/title_activity_ajustes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Nombre"
            android:label="@string/title_activity_nombre"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".Tiempo"
            android:label="@string/title_activity_tiempo"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".Anuncios"
            android:label="@string/title_activity_anuncios"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>