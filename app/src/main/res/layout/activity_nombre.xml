<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_redondeado"
    android:padding="25dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="barbara.srta_athenea_tablas.Nombre">

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="@string/presentacion2"
        android:paddingLeft="12dp"
        android:textSize="30dp" />

    <Button
        android:id="@+id/guardarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editNombre"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:background="@drawable/edit_redondeado_amarillo"
        android:padding="12dp"
        android:text="@string/guardar"
        android:textColor="@color/tizaRja"
        android:textSize="@dimen/mediana2" />
</RelativeLayout>
