<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fondo"
    android:background="@drawable/inicio_segunda"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="80dp"
    android:paddingRight="80dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    tools:context="barbara.srta_athenea_tablas.Portada">

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="224dp"
        android:background="@drawable/edit_redondeado"
        android:gravity="center_vertical|center_horizontal"
        android:padding="15dp"
        android:paddingTop="12dp"
        android:textAlignment="gravity"
        android:textSize="@dimen/grande" />

    <Button
        android:id="@+id/botonEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_redondeado_naranja"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/entrar"
        android:textSize="@dimen/pequeno"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/introdNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonNombre"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="140dp"
        android:background="@drawable/edit_redondeado_amarillo"
        android:ems="6"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:textSize="@dimen/mediana"
        android:visibility="invisible" />

    <Button
        android:id="@+id/botonNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonEntrar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/edit_redondeado"
        android:gravity="center_vertical|center_horizontal"
        android:padding="12dp"
        android:text="OK"
        android:visibility="invisible" />
</RelativeLayout>
